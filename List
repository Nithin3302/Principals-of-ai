# Create a list with mixed data types
my_list = ["hello", 5, 3.14, True]

# Access the second element (number 5)
second_element = my_list[1]
print(f"Second element: {second_element}")  # Output: Second element: 5

# Loop through each element and print its index and value
for i, item in enumerate(my_list):
  print(f"Index: {i}, Value: {item}")

# Output:
# Index: 0, Value: hello
# Index: 1, Value: 5
# Index: 2, Value: 3.14
# Index: 3, Value: True
